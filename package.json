{
  "name": "meeteric-ts-azure",
  "version": "0.1.0",
  "main": "./bundle",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "test": "npm run lint && mocha --recursive release/**/*Test*.js",
    "build-test": "npm run build && npm run test",
    "test-withreport": "mocha --recursive release/**/*Test*.js --reporter mocha-junit-reporter --reporter-options mochaFile=./testresults/test-results.xml",
    "lint": "tslint -p tsconfig.json -t stylish",
    "copy-package": "copyfiles package.json ./release/",
    "package": "npm run copy-package && npm pack ./release"
  },
  "author": {
    "url": "https://www.meeteric.net",
    "name": "Eric Maino",
    "email": "eric.maino@microsoft.com"
  },
  "description" : "A collection of strongly typed Azure adapters",
  "repository": {
    "type": "git",
    "url": "https://github.com/MeetEric/meeteric-ts-azure"
  },
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.103",
    "@types/node": "^9.4.6",
    "azure-sb": "^0.10.6",
    "azure-storage": "^2.10.2",
    "meeteric-ts": "0.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "ajv": "^6.1.1",
    "ajv-keywords": "^3.1.0",
    "copyfiles": "^2.1.0",
    "chai": "^4.2.0",
    "del": "^3.0.0",
    "lodash": "^4.17.5",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "ncp": "^2.0.0",
    "require-dir": "^1.0.0",
    "ts-node": "3.3.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.6"
  }
}
